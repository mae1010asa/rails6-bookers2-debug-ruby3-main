<table class='my-5'>
  <% @book.book_comments.each do |book_comment| %>
    <tr>
      <td><%= link_to(book_comment.user) do %>
        <%= image_tag book_comment.user.get_profile_image, size:'50x50' %><br>
        <%= book_comment.user.name %>
        <% end %>
      </td>
      <td>
        <%= book_comment.comment %>
      </td>
      <% if book_comment.user == current_user %>
        <td class='pl-5'><%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete,remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
      <% end %>
    </tr>
  <% end %>
</table>