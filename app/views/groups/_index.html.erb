<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー数</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_group_image, size: '50x50' %></td>
        <td><%= link_to group.name,group %></td>
        <td><%= group.introduction %></td>
        <td><%= group.group_users.count %></td>        
        <td>
          <% if group.owner_id == current_user.id %>
            <td><%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success" %></td>
          <% end %>
        </td>
        <td>
          <%= link_to "Notice an Event", new_group_event_notice_path(group), class: "btn btn-sm btn-success" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

