<div class="mx-auto w-50">
  <h1>Create Group</h1>
  <%= form_with model:@group, local:true do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control group_name' %>
    </div>
    <div class="form-group">
      <%= f.label :introduction %>
      <%= f.text_area :introduction, class: 'form-control group_introduction' %>
    </div>
    <div class="form-group">
      <%= f.label :group_image %><br>
      <%= f.file_field :group_image %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Group' %>
    </div>
  <% end %>
</div>
